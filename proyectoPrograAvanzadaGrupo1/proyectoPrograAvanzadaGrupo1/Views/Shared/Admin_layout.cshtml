<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Tables - SB Admin</title>
    <link href="~/css/admin.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-area="" asp-controller="Admin" asp-action="Home"> Pagina de Administracion de Pixel Dojo</a>

        <!-- Navbar-->
        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Tienda</a></li>
            <li class="nav-item"><a class="nav-link active" @Html.ActionLink("Cerrar Sesion", "CerrarSesion", "Home")</a></li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Home">
                            <div class="sb-nav-link-icon"><i class="fas fa-house"></i></div>
                            Inicio
                        </a>

                        <div class="sb-sidenav-menu-heading">Tables</div>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="ProductoTable">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Productos
                        </a>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="UsuariosTable">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Usuarios
                        </a>

                        <div class="sb-sidenav-menu-heading">Acciones</div>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="AgregarProducto">
                            <div class="sb-nav-link-icon"><i class="fas fa-square-plus"></i></div>
                            Agregar Producto
                        </a>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="AgregarUsuario">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-plus"></i></div>
                            Agregar Usuario
                        </a>

                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    @ViewData["Username"]
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main role="main">
                @RenderBody()
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Pixel Dojo 2024</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

</body>
</html>
