@model IEnumerable<proyectoPrograAvanzadaGrupo1.Models.Pedido>

<h1>Listado de Pedidos</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID del Pedido</th>
            <th>Fecha del Pedido</th>
            <th>Total</th>
            <th>Usuario</th>
            <th>Detalles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@pedido.Orden_id</td>
                <td>@pedido.Fecha_pedido.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>@pedido.Total.ToString("C")</td>
                <td>@pedido.User.usuario</td>
                <td><a href="@Url.Action("PedidoDetail", "Pedido", new { id = pedido.Orden_id })">Ver Detalles</a></td>
            </tr>
        }
    </tbody>
</table>
