@{
    Layout = "";
}
@model User;

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CasoPractico1.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-sm-center h-100">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                    <div class="text-center my-5">
                        <img src="~/img/Logo.png" alt="logo" width="300">
                    </div>
                    <div class="card shadow-lg">
                        <div class="card-body p-5">
                            <h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
                            <form asp-action="Login" asp-controller="Acceso" method="post">
                                <div class="mb-3">
                                    <label class="form-label">Usuario</label>
                                    <input type="text" class="form-control" name="usuario" asp-for="usuario" placeholder="Escriba su usuario">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Contraseña</label>
                                    <input type="password" name="contraseña_hash" class="form-control" asp-for="contraseña_hash" placeholder="Escriba su contraseña">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">recordar Sesion</label>
                                    <input type="checkbox" name="Password" class="form-check-input" asp-for="MantenerActivo">
                                </div>

                                <div class="col-auto">
                                    <button type="submit" class="btn btn-primary mb-3">Ingresar</button>
                                </div>
                                <label class="alert-danger">@ViewBag.Error</label>

                            </form>
                            <div class="col-auto">
                                no tienes una cuenta? <a href="@Url.Action("Register","Acceso")" class="ml-2">Registrarse</a>
                            </div>
                        </div>
                        <div class="text-center mt-5 text-muted">
                            Copyright &copy; 2024 &mdash; Pixel Dojo
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>