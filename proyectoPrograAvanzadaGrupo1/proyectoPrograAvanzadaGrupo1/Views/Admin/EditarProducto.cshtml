@{
    Layout = "../Shared/Admin_layout.cshtml";
}
@model Producto;


<div class="container-fluid px-4">
    <h1 class="mt-4">Editar Producto</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Admin" asp-action="Home">Inicio</a></li>
        <li class="breadcrumb-item active">Editar</li>
        <li class="breadcrumb-item active">Producto</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Producto
        </div>
    <div class="card-body">
    <div class="container mt-3">
    <form method="POST" enctype="multipart/form-data">
        <input asp-for="producto_id" />
        <div class="mb-3">
            <label for="nombre_producto" class="form-label">Nombre del Producto</label>
            <input type="text" class="form-control" name="nombre_producto" asp-for="nombre_producto" required>
        </div>
        <div class="mb-3">
            <label for="precio" class="form-label">Precio</label>
            <input type="number" class="form-control" name="precio" asp-for="precio" step="0.01" required>
        </div>
        <div class="mb-3">
            <label for="fecha_salida" class="form-label">Fecha de Salida</label>
            <input type="datetime-local" class="form-control" name="fecha_salida" asp-for="fecha_salida" required>
        </div>
        <div class="mb-3">
            <label for="cantidad" class="form-label">Cantidad</label>
            <input type="number" class="form-control" name="cantidad" asp-for="cantidad" required>
        </div>
        <div class="mb-3">
            <label for="video_url" class="form-label">URL del Video</label>
                        <input type="url" class="form-control" name="video_url" asp-for="video_url" required>
        </div>
        <div class="mb-3">
            <label for="estado_id" class="form-label">Estado</label>
            <select class="form-select" name="estado_id" asp-for="estado_id" required>
                <option value="1">Activo</option>
                <option value="2">Inactivo</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="descripcion" class="form-label">Descripción</label>
                        <textarea class="form-control" name="descripcion" asp-for="descripcion" rows="4" required></textarea>
        </div>
        <div class="mb-3">
            <label for="foto" class="form-label">Foto</label>
                        <input type="file" class="form-control" name="File" asp-for="File" required>
        </div>
        <div class="mb-3">
            <label for="precio_descuento" class="form-label">Precio con Descuento</label>
                        <input type="number" class="form-control" name="precio_descuento" asp-for="precio_descuento" required step="0.01">
        </div>
        <div class="mb-3">
            <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="en_descuento" asp-for="en_descuento" required>
                <label class="form-check-label" for="en_descuento">En Descuento</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-3" asp-controller="Admin" asp-action="EditarProducto">Editar Producto</button>
    </form>

    <label class="alert.danger">@ViewBag.error</label>

    </div>

    </div>

    </div>

</div>